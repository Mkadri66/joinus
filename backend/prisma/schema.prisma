generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql" // ou "mysql", "sqlite" selon ta base de données
  url      = env("DATABASE_URL")
}

enum Level {
  Debutant // Débutant
  Moyen // Moyen
  Expert // Expert
}

model User {
  id                      String          @id @default(uuid())
  pseudo                  String          @unique
  name                    String
  email                   String          @unique
  password                String
  createdAt               DateTime        @default(now())
  updatedAt               DateTime        @updatedAt
  profilePic              String?
  bio                     String?
  sports                  UserSport[]
  organizedEvents         Event[]         @relation("Organizer")
  participations          Participation[]
  sentMessagesEvent       MessageEvent[]  @relation("MessageSender")
}

model Sport {
  id          String      @id @default(uuid())
  name        String      @unique
  minPlayers  Int
  maxPlayers  Int
  description String?
  users       UserSport[]
  events      Event[]
}

model UserSport {
  user    User   @relation(fields: [userId], references: [id])
  userId  String
  sport   Sport  @relation(fields: [sportId], references: [id])
  sportId String
  level   Level  @default(Debutant)

  @@id([userId, sportId])
}

model Event {
  id              String          @id @default(uuid())
  title           String
  description     String?
  sport           Sport           @relation(fields: [sportId], references: [id])
  sportId         String
  level           Level           @default(Moyen)
  organizer       User            @relation("Organizer", fields: [organizerId], references: [id])
  organizerId     String
  location        String
  latitude        Float
  longitude       Float
  scheduledAt     DateTime
  createdAt       DateTime        @default(now())
  updatedAt       DateTime        @updatedAt
  maxParticipants Int
  participants    Participation[]
  messages        MessageEvent[]
}

model Participation {
  id       String   @id @default(uuid())
  user     User     @relation(fields: [userId], references: [id])
  userId   String
  event    Event    @relation(fields: [eventId], references: [id])
  eventId  String
  joinedAt DateTime @default(now())
}

model MessageEvent {
  id        String   @id @default(uuid())
  content   String
  sender    User     @relation("MessageSender", fields: [senderId], references: [id])
  senderId  String
  event     Event    @relation(fields: [eventId], references: [id])
  eventId   String
  createdAt DateTime @default(now())
}
